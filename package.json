{
  "private": true,
  "name": "@yunyoujun/utils",
  "keywords": [
    "utils",
    "cli"
  ],
  "scripts": {
    "docs:build": "typedoc",
    "docs:serve": "cd docs && live-server",
    "build": "run-s build:logger build:utils",
    "build:logger": "cd packages/logger && npm run build",
    "build:utils": "cd packages/utils && npm run build",
    "prepublishOnly": "yarn build",
    "lint": "eslint \"**/*.{ts,js}\" --fix",
    "release": "ts-node-script scripts/release.ts",
    "test": "node -r ts-node/register src/index.ts",
    "prepare": "husky install"
  },
  "repository": "https://github.com/YunYouJun/utils",
  "author": {
    "email": "me@yunyoujun.cn",
    "name": "YunYouJun",
    "url": "https://www.yunyoujun.cn"
  },
  "homepage": "https://www.yunyoujun.cn/utils/",
  "license": "MIT",
  "devDependencies": {
    "@antfu/eslint-config": "^0.20.7",
    "@types/minimist": "^1.2.2",
    "@types/node": "^17.0.25",
    "@types/semver": "^7.3.9",
    "eslint": "^8.14.0",
    "fast-glob": "^3.2.11",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "minimist": "^1.2.6",
    "npm-run-all": "^4.1.5",
    "semver": "^7.3.7",
    "ts-node": "^10.7.0",
    "tsup": "^5.12.6",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.3",
    "vitest": "^0.9.4"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  }
}
