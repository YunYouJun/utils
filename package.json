  "devDependencies": {
    "@antfu/eslint-config": "^2.21.1",
    "@types/node": "^20.14.2",
    "@types/semver": "^7.5.8",
    "@yunyoujun/logger": "workspace:*",
    "bumpp": "^9.4.1",
    "consola": "^3.2.3",
    "enquirer": "^2.4.1",
    "eslint": "^9.4.0",
    "execa": "^9.2.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "npm-run-all": "^4.1.5",
    "tsx": "^4.15.4",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "unbuild": "^2.0.0",
    "vitest": "^1.6.0",
    "zx": "^8.1.2"
