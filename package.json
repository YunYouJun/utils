{
  "name": "@yunyoujun/utils",
  "private": true,
  "version": "0.0.6",
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "utils",
    "cli"
  ],
  "scripts": {
    "docs:build": "typedoc",
    "docs:serve": "cd docs && live-server",
    "build": "yarn workspaces run build",
    "prepublishOnly": "yarn build",
    "lint": "eslint src --ext .ts --fix && prettier --write .",
    "test": "node -r ts-node/register src/index.ts"
  },
  "repository": "https://github.com/YunYouJun/utils",
  "author": {
    "email": "me@yunyoujun.cn",
    "name": "YunYouJun",
    "url": "https://www.yunyoujun.cn"
  },
  "homepage": "https://www.yunyoujun.cn/utils/",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.28",
    "typescript": "^4.2.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
